# Environment configuration for GarageReg Mobile
# Copy this file to .env and update values for your environment

# API Configuration
API_BASE_URL=http://10.0.2.2/api/v1  # Android emulator localhost
# API_BASE_URL=http://localhost/api/v1  # iOS simulator
API_TIMEOUT=30000
API_CONNECT_TIMEOUT=15000

# App Configuration
APP_NAME=GarageReg
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Environment
ENVIRONMENT=development
DEBUG_MODE=true
ENABLE_LOGGING=true

# Authentication
JWT_STORAGE_KEY=garagereg_jwt
REFRESH_TOKEN_KEY=garagereg_refresh
BIOMETRIC_ENABLED=true

# Features
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false

# Firebase (if using)
# FIREBASE_PROJECT_ID=garagereg-mobile
# FIREBASE_APP_ID=com.garagereg.mobile
# FCM_SERVER_KEY=your-fcm-server-key

# Maps (optional)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# ENABLE_MAPS=false

# Storage
LOCAL_DB_NAME=garagereg.db
CACHE_MAX_AGE_HOURS=24
MAX_CACHE_SIZE_MB=100

# Security
CERTIFICATE_PINNING=false
# SSL_CERT_SHA256=your-ssl-certificate-sha256

# Maintenance
AUTO_SYNC_INTERVAL_MINUTES=15
BACKGROUND_SYNC_ENABLED=true

# UI/UX
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,hu
DEFAULT_THEME=system  # light, dark, system
ENABLE_HAPTIC_FEEDBACK=true

# Development
ENABLE_DEV_TOOLS=true
SHOW_DEBUG_BANNER=false
MOCK_API_RESPONSES=false

# Performance
IMAGE_CACHE_SIZE_MB=50
NETWORK_RETRY_COUNT=3
NETWORK_RETRY_DELAY_MS=1000