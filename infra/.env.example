# =============================================================================
# ENVIRONMENT CONFIGURATION FOR LOCAL DEVELOPMENT
# Copy this file to .env and adjust values as needed
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=garagereg
DB_USER=garagereg
DB_PASSWORD=garagereg_secure_dev_password_2024
DB_HOST=postgres
DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=garagereg_redis_dev_2024
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# APPLICATION SECURITY
# =============================================================================
SECRET_KEY=garagereg_ultra_secure_secret_key_for_local_dev_2024_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Build targets
BUILD_TARGET=production
WEB_BUILD_TARGET=production

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=garagereg.local
API_DOMAIN=api.garagereg.local
ADMIN_DOMAIN=admin.garagereg.local
APP_DOMAIN=app.garagereg.local

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SECURE_COOKIES=true
HTTPS_ONLY=true

# =============================================================================
# EMAIL CONFIGURATION (Development - using MailHog)
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=false
SMTP_FROM=noreply@garagereg.local

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=15d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://app.garagereg.local,https://admin.garagereg.local,http://localhost:3000

# =============================================================================
# APPLICATION VERSIONING
# =============================================================================
APP_VERSION=1.0.0
API_VERSION=v1

# =============================================================================
# FEATURE FLAGS (Development)
# =============================================================================
ENABLE_DEBUG_TOOLBAR=true
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_METRICS=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DB_NAME=garagereg_test
TEST_REDIS_DB=15

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
COMPOSE_PROJECT_NAME=garagereg
COMPOSE_FILE=infra/docker-compose.yml

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
WEBHOOK_URL=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKERS=4
MAX_CONNECTIONS=100
POOL_SIZE=20
MAX_OVERFLOW=0

# =============================================================================
# SECURITY HEADERS
# =============================================================================
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'